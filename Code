    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const greetingText = "< hi, i'm Parth >";
            const greetingElement = document.getElementById('greeting');
            let index = 0;

            function typeGreeting() {
                if (index < greetingText.length) {
                    const span = document.createElement('span');
                    span.textContent = greetingText[index];
                    span.style.animationDelay = `${index * 0.05}s`;
                    greetingElement.appendChild(span);
                    index++;
                    setTimeout(typeGreeting, 50);
                }
            }

            typeGreeting();

            const animatedHeadline = document.querySelector('.animated-headline');
            const words = [
                "\"Proud advocate of the notion that there’s no such thing as too much tech.\"",
                "\"A DevOps aficionado who treats automation like a sacred rite.\"",
                "\"Firm believer that if the machines don’t understand us, it's clearly our fault.\"",
                "\"Backend wizard who ensures that everything works behind the scenes, so you don’t have to know it’s there.\"",
                "\"User interface perfectionist, because a pretty face is important, even if it’s digital.\"",
                "\"Virtualization enthusiast who’s determined to keep everything light and fluffy—literally.\"",
                "\"Predictive modeling enthusiast, because guessing is for amateurs.\"",
                "\"Code artisan who transforms caffeine into software, one line at a time.\"",
            ];
            let wordIndex = 0;
            let letterIndex = 0;

            function typeHeadline() {
                if (letterIndex < words[wordIndex].length) {
                    animatedHeadline.textContent += words[wordIndex].charAt(letterIndex);
                    letterIndex++;
                    setTimeout(typeHeadline, 70);
                } else {
                    setTimeout(eraseHeadline, 30);
                }
            }

            function eraseHeadline() {
                if (letterIndex > 0) {
                    animatedHeadline.textContent = animatedHeadline.textContent.slice(0, -1);
                    letterIndex--;
                    setTimeout(eraseHeadline, 50);
                } else {
                    wordIndex = (wordIndex + 1) % words.length;
                    setTimeout(typeHeadline, 500);
                }
            }

            setTimeout(typeHeadline, 500);
        });

        document.addEventListener('DOMContentLoaded', function () {
            const sections = document.querySelectorAll('.section');
            const observerOptions = {
                threshold: 0.1
            };
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });
        });

        // Simulate an error message appearing from the side
        window.addEventListener('load', function() {
            const errorMessage = document.getElementById('error-message');

            // Show the error message with a delay
            setTimeout(() => {
                errorMessage.classList.add('show');

                // Add a delay before starting the fade-out
                setTimeout(() => {
                    errorMessage.classList.add('fade-out');
                }, 5000); // Fade-out starts after 5 seconds

            }, 2000); // Error message appears 2 seconds after page load

            // Optional: Remove the element from the DOM after the transition ends
            errorMessage.addEventListener('transitionend', function() {
                if (errorMessage.classList.contains('fade-out')) {
                    errorMessage.remove();
                }
            });
        });



    </script>

